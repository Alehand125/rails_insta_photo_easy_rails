<!DOCTYPE html>
<html>
  <head>
    <title>Sashkaphoto</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid container-background">
      <div class="container">
        <ul class="nav">
          <li class="nav-link active">
            <%= link_to "Sashkaphoto",root_path, class: "nav-landing" %>
          </li>
          <li class="nav-link active">
            <%= link_to "О проекте", pages_about_path,class: "nav-landing" %>
          </li>
          <li class="nav-link active">

            <% if user_signed_in?%>
              <%= link_to "Выйти",  destroy_user_session_path, method: :delete, class: "nav-landing" %>
            </li>
          <% end %>
        </ul>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
